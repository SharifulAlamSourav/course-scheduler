<table>
  <thead>
    <tr>
      <% headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
      <th>Opcje</th>
    </tr>
  </thead>
  <tbody>
    <% objects.each do |object| %>
      <tr>
        <% fields.each do |field| %>
          <% if field == fields.first %>
            <td><%= link_to(object.send(field), url(:controller => controller_name, :action => "show", :id => object.id)) %></td>
          <% else %>
            <td><%= object.send(field) %></td>
        <% end %>
        <%  end %>
        <td>
          <%= link_to("Edytuj", url(:controller => controller_name, :action => "edit", :id => object.id)) %>
          <%= link_to("UsuÅ„", url(:controller => controller_name, :action => "delete", :id => object.id)) %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="<%= fields.size + 1 %>"><%= pagination %></td>
    </tr>
  </tfoot>
</table>
